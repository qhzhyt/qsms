<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - 问卷调查管理系统</title>
  <link rel="stylesheet" href="~/Content/site.css" />
  <link rel="stylesheet" href="~/Content/bootstrap.css" />
  <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
  <link rel="stylesheet" href="~/Content/bootstrap-select.min.css"/>
  <link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body @Html.Raw(ViewData["bodyAttrs"])>
<div class="navbar navbar-fixed-top navbar-transparent">
  <div class="container">
    <div class="navbar-header">      
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span style="background: white" class="sr-only">Toggle navigation</span>
        <span style="background: white" class="icon-bar"></span>
        <span style="background: white" class="icon-bar"></span>
        <span style="background: white" class="icon-bar"></span>
      </button>
      <a class="navbar-brand" style="color: white; font-size: 1.6em" href="/">问卷调查管理系统</a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/">主页</a></li>
        @Html.Raw(ViewData["navList"])
      </ul>
    </div>
  </div>
</div>
<div class="container body-content">
  @RenderBody()
  @*<hr style="margin-top: 200px"/>*@
  @*<footer>
    <p>&copy; 2016 - qssWeb</p>
  </footer>*@
</div>

<environment names="Development">
  <script src="~/Scripts/jquery-1.9.1.js"></script>
  <script src="~/Scripts/bootstrap.js"></script>
  <script type="text/javascript" src="~/Scripts/bootstrap-select.js"></script>
  <script type="text/javascript" src="~/Scripts/i18n/defaults-zh_CN.min.js"></script>
  <script src="~/Scripts/site.js" ></script>
</environment>

@RenderSection("scripts", required: false)
</body>
</html>
